<body class="">
  <div class="wrapper ">
    <%- include('./partials/sidebar') %>
    <div class="main-panel">
      <!-- Navbar -->
      <%- include('./partials/horbar') %>
      <!-- End Navbar -->
      <div class="content">
        <div class="row">
          <div class="col-md-3 ">

            <div class="text-center" id="preimage" style="display: none;">
              <div class="card-header">
                <h5 class="card-title">Banner Image Preview</h5>
                <img class="profile-user-img img-fluid img-circle" id="appphoto" src="" alt="User profile picture">
            
              </div>
            </div>
            </div>
          <div class="col-md-9 ">
            <div class="card card-user">
              <div class="card-header">
                <h5 class="card-title">Add Product Category</h5>

              </div>
              <div class="card-body">
                <%- include ('./partials/messages') %>
                <form action="/category/addnewcategory" method="post" enctype="multipart/form-data" >
                 
                  <div class="row">
                    <div class="col-md-12">
                      <div class="form-group">
                        <label>Product Category Name</label>
                        <input type="text" class="form-control" placeholder="Product Category Name" name="categoryname">
                      </div>
                    </div>
                  </div>
                  
                  <div class="row">
                    <div class="col-md-12">
                      <div class="form-group">
                        <label>Product Category Overview</label>
                        <textarea class="form-control textarea" name="categoryoverview">Oh so, your weak rhyme You doubt I'll bother, reading into it</textarea>
                      </div>
                    </div>
                  </div>
                  <input type="hidden" id="bannerimage" name="bannerimage">
                  <div class="form-group">
                    <!-- <label for="customFile">Custom File</label> -->

                    <div class="custom-file">
                      <input type="file" class="custom-file-input" id="bannerphoto" name="bannerphoto" onchange="
                      document.getElementById('appphoto').src = window.URL.createObjectURL(this.files[0]);
                      encodeImageFileAsURL(this) ;
                        document.getElementById('preimage').style.display='block';">
                     <label class="custom-file-label" for="customFile"></label>
                    </div>
                  </div>
                  <script>
                    function encodeImageFileAsURL(element) {
                      let file = element.files[0];
                      let reader = new FileReader();
                      reader.onloadend = function() {
                       // document.write('RESULT: ', reader.result);
                        document.getElementById("bannerimage").value = reader.result;
                      }
                      reader.readAsDataURL(file);
                    }
                  </script>
                  <div class="row">
                    <div class="  col-md-6 offset-md-3">
                      <button type="submit" class="btn btn-primary btn-round btn-block">Save</button>
                    </div>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
      <%- include('./partials/footer') %>
    </div>
  </div>
